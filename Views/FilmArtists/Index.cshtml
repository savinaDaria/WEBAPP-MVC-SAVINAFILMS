@model IEnumerable<SAVINAFILMS.FilmArtist>

@{
    ViewData["Title"] = "Фільми з актором ";
}
    <head>
        <style>
            body {
                background-image: url(https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);
                background-repeat: no-repeat;
                background-attachment: fixed;
                background-size: cover;
            }

            table {
                background-color: rgba(0, 0, 0, 0.6);
            }

            .text-dasha {
                color: white;
            }

            .text-dasha-link {
                color: #581845;
                font-size: 22px;
            }

            .text-dasha-link-btn {
                color: #ff7070;
            }

            a {
                color: #fffda6
            }
        </style>
    </head>

    <h1 class="text-dasha">Фільми з актором @ViewBag.Name</h1>

    <p>
        @Html.ActionLink("Додати фільм", "Create", new { ArtistId = @ViewBag.ArtistId, name = @ViewBag.Name })
    </p>
<table class="table">
    <thead>
        <tr class="text-dasha">
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-dasha">
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Про фільм</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
